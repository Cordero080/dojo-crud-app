<link rel="stylesheet" href="/css/new.css?v=<%= cssVersion %>" />
<link rel="stylesheet" href="/css/trash.css?v=<%= cssVersion %>" />
<link rel="stylesheet" href="/css/nav-arrows.css?v=<%= cssVersion %>" />

<!-- Self-hosted Chart.js (CSP-safe) -->
